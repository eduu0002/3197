{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/eduu0002/3197/main/2/Data/global-data-on-sustainable-energy.csv"
  },
  "params": [
    {
      "name": "year_select",
      "value": 2020,
      "bind": {
        "input": "range",
        "min": 2000,
        "max": 2020,
        "step": 1,
        "name": "Select year: "
      }
    }
  ],
  "vconcat": [
    {
      "width": 400,
      "title": "Global Energy Consumption",
      "resolve": { "scale": { "color": "independent" } },
      "projection": { "type": "equalEarth" },
      "layer": [
        {
          "data": {
            "url": "world_map_with_graticles.json",
            "format": {
              "type": "topojson",
              "feature": "ne_110m_admin_0_countries"
            }
          },
          "transform": [
            {
              "calculate": "'Data is not available in ' + datum.properties.NAME",
              "as": "note"
            }
          ],
          "mark": {
            "type": "geoshape",
            "fill": "#ddd",
            "stroke": "grey"
          },
          "encoding": { "tooltip": { "field": "note" } }
        },

        {
          "transform": [
            {
              "lookup": "Entity",
              "from": {
                "data": {
                  "url": "world_map_with_graticles.json",
                  "format": {
                    "type": "topojson",
                    "feature": "ne_110m_admin_0_countries"
                  }
                },
                "key": "properties.NAME"
              },
              "as": "geo"
            },
            { "filter": "datum.Year == year_select" }
          ],
          "mark": { "type": "geoshape" },
          "encoding": {
            "shape": { "field": "geo", "type": "geojson" },
            "color": {
              "field": "Primary energy consumption per capita (kWh/person)",
              "type": "quantitative",
              "scale": { "scheme": "orangered" }
            },
            "tooltip": [
              {
                "field": "Entity",
                "type": "nominal",
                "title": "Country"
              },
              { "field": "Year" },
              {
                "field": "Primary energy consumption per capita (kWh/person)",
                "type": "quantitative",
                "title": "Energy Consumption per capita (kWh)"
              }
            ]
          }
        }
      ]
    },
    {
      "transform": [
        {
          "fold": [
            "Electricity from nuclear (TWh)",
            "Electricity from renewables (TWh)",
            "Electricity from fossil fuels (TWh)"
          ],
          "as": ["type_of_energy", "energy_value"]
        },
        { "filter": "datum.Year == year_select" },
        {
          "joinaggregate": [
            {
              "op": "sum",
              "field": "energy_value",
              "as": "total_energy"
            }
          ],
          "groupby": ["Entity"]
        },
        {
          "window": [
            {
              "op": "dense_rank",
              "field": "total_energy",
              "as": "rank"
            }
          ],
          "sort": [{ "field": "total_energy", "order": "descending" }]
        },
        { "filter": "datum.rank <= 10" }
      ],

      "mark": "bar",
      "encoding": {
        "x": {
          "field": "Entity",
          "type": "nominal",
          "sort": "-y"
        },
        "y": {
          "field": "energy_value",
          "type": "quantitative"
        },
        "color": {
          "field": "type_of_energy",
          "type": "nominal"
        },
        "tooltip": [
          { "field": "type_of_energy" },
          { "field": "energy_value" },
          { "field": "total_energy" }
        ]
      }
    }
  ]
}
