{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/eduu0002/3197/main/2/Data/Global%20Electricity%20Statistics_cleaned.csv"
  },
  "params": [
    {
      "name": "year_select",
      "value": 2021,
      "bind": {
        "input": "range",
        "min": 2000,
        "max": 2021,
        "step": 1,
        "name": "Select year: "
      }
    }
  ],
  "vconcat": [
    {
      "width": 400,
      "title": "Global Electricity Production",
      "resolve": { "scale": { "color": "independent" } },
      "projection": { "type": "equalEarth" },
      "layer": [
        {
          "data": {
            "url": "https://raw.githubusercontent.com/eduu0002/3197/main/2/js/world_map_with_graticles.json",
            "format": {
              "type": "topojson",
              "feature": "ne_110m_admin_0_countries"
            }
          },
          "transform": [
            {
              "calculate": "'Data is not available in ' + datum.properties.NAME",
              "as": "note"
            }
          ],
          "mark": {
            "type": "geoshape",
            "fill": "#ddd",
            "stroke": "grey"
          },
          "encoding": { "tooltip": { "field": "note" } }
        },

        {
          "transform": [
            {
              "lookup": "Country",
              "from": {
                "data": {
                  "url": "world_map_with_graticles.json",
                  "format": {
                    "type": "topojson",
                    "feature": "ne_110m_admin_0_countries"
                  }
                },
                "key": "properties.NAME"
              },
              "as": "geo"
            },
            { "filter": "datum.Year == year_select" }
          ],
          "mark": { "type": "geoshape" },
          "encoding": {
            "shape": { "field": "geo", "type": "geojson" },
            "color": {
              "field": "netgeneration",
              "type": "quantitative",
              "scale": { "scheme": "bluegreen" }
            },

            "opacity": {
              "condition": { "param": "country_select", "value": 1 },
              "value": 0
            },
            "tooltip": [
              {
                "field": "Country",
                "type": "nominal",
                "title": "Country"
              },
              {
                "field": "netgeneration",
                "type": "quantitative",
                "title": "Net Energy Generated"
              },
              { "field": "Year" }
            ]
          }
        }
      ]
    },

    {
      "transform": [{ "filter": "datum.Year == year_select" }],
      "vconcat": [
        {
          "params": [
            {
              "name": "country_select",
              "select": {
                "type": "point"
              }
            }
          ],
          "transform": [
            {
              "window": [
                {
                  "op": "rank",
                  "field": "imports",

                  "as": "rank"
                }
              ],
              "sort": [{ "field": "imports", "order": "descending" }]
            },
            { "filter": "datum.rank <= 10" }
          ],
          "title": "Electricity Imports",
          "mark": "bar",
          "encoding": {
            "x": {
              "field": "imports",
              "type": "quantitative",
              "title": "Net Electricity Imports"
            },
            "y": {
              "field": "Country",
              "type": "nominal",
              "sort": "-x"
            },

            "color": {
              "field": "Country",
              "legend": null,

              "scale": { "scheme": "category20" }
            },
            "opacity": {
              "condition": { "param": "country_select", "value": 1 },
              "value": 0.2
            },
            "tooltip": [
              {
                "field": "Country"
              },
              {
                "field": "Year"
              },
              { "field": "imports" },
              { "field": "rank" }
            ]
          }
        },

        {
          "transform": [
            {
              "window": [
                {
                  "op": "rank",

                  "as": "rank"
                }
              ],
              "sort": [{ "field": "exports", "order": "descending" }]
            },
            { "filter": "datum.rank <= 10" }
          ],
          "title": "Electricity Exports",
          "mark": "bar",
          "encoding": {
            "x": {
              "field": "exports",
              "type": "quantitative",
              "title": "Net Electricity Imports"
            },
            "y": {
              "field": "Country",
              "type": "nominal",
              "sort": "-x"
            },

            "color": {
              "field": "Country",
              "type": "nominal"
            },
            "tooltip": [
              {
                "field": "Country"
              },
              {
                "field": "Year"
              },
              { "field": "exports" }
            ]
          }
        }
      ]
    }
  ]
}
